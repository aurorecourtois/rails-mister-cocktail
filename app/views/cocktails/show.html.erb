<h2><%= @cocktail.name %></h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> - <%= dose.description %>
    </li>
  <% end %>
</ul>
<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>

<%= link_to "Back to cocktails", cocktails_path %>
<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail)  %>
